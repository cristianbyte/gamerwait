---
import Analytics from "@vercel/analytics/astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>GamerWait — Coming Soon</title>
    <style>
      :root {
        --bg: #000000;
        --neon: #00ff66;
        --neon-2: #008535;
        --glass: #00ff66;
      }
      html,
      body {
        height: 100%;
      }
      body {
        margin: 0;
        background: var(--bg);
        color: var(--neon);
        font-family:
          Inter,
          ui-sans-serif,
          system-ui,
          -apple-system,
          "Segoe UI",
          Roboto,
          "Helvetica Neue",
          Arial;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .wrap {
        width: 100%;
        max-width: 1100px;
        padding: 48px 24px;
        box-sizing: border-box;
        display: grid;
        grid-template-columns: 1fr 420px;
        gap: 40px;
        align-items: center;
      }

      /* Center column for small screens */
      @media (max-width: 900px) {
        .wrap {
          grid-template-columns: 1fr;
          text-align: center;
        }
      }

      .hero {
        display: flex;
        flex-direction: column;
        gap: 18px;
      }

      .title {
        font-size: clamp(40px, 7vw, 96px);
        line-height: 0.9;
        letter-spacing: -1px;
        font-weight: 800;
        text-transform: uppercase;
        text-shadow:
          0 0 14px rgba(0, 255, 102, 0.08),
          0 8px 30px rgba(0, 0, 0, 0.6);
      }

      .subtitle {
        font-size: 18px;
        color: var(--neon-2);
        max-width: 680px;
      }

      /* Radar box */
      .radar-wrap {
        width: 420px;
        height: 420px;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
      }

      @media (max-width: 900px) {
        .radar-wrap {
          margin: 0 auto;
        }
      }

      .radar {
        width: 320px;
        height: 320px;
        border-radius: 50%;
        position: relative;
        overflow: hidden;
        background: radial-gradient(
            circle at center,
            rgba(0, 255, 102, 0.02) 0%,
            rgba(0, 255, 102, 0.01) 40%,
            transparent 70%
          ),
          linear-gradient(180deg, rgba(255, 255, 255, 0.02), transparent 60%);
        box-shadow:
          inset 0 0 40px rgba(0, 255, 102, 0.02),
          0 10px 40px rgba(0, 0, 0, 0.8);
      }

      /* concentric rings */
      .radar::before {
        content: "";
        position: absolute;
        inset: 0;
        border-radius: 50%;
        background-image: radial-gradient(
          circle,
          transparent 0 10%,
          rgba(0, 255, 102, 0.03) 10% 11%,
          transparent 11% 22%,
          rgba(0, 255, 102, 0.02) 22% 23%,
          transparent 23% 40%
        );
        mix-blend-mode: screen;
      }

      /* rotating sweep */
      .sweep {
        position: absolute;
        inset: 0;
        transform-origin: 50% 50%;
        animation: spin 4.5s linear infinite;
        pointer-events: none;
      }

      .sweep::before {
        content: "";
        position: absolute;
        inset: 0;
        border-radius: 50%;
        background: conic-gradient(
          from 320deg at 50% 50%,
          rgba(0, 255, 102, 0.589) 0%,
          rgba(0, 255, 102, 0.048) 20%,
          rgba(0, 255, 102, 0.02) 25%,
          transparent 40%
        );
        filter: blur(2px);
        mix-blend-mode: screen;
      }

      @keyframes spin {
        to {
          transform: rotate(-360deg);
        }
      }

      /* center glow and ping */
      .center-dot {
        position: absolute;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: var(--neon);
        box-shadow:
          0 0 16px var(--neon),
          0 0 32px rgba(0, 255, 102, 0.623);
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
      }

      .ping {
        position: absolute;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
        background: rgba(0, 255, 102, 0.12);
        animation: ping 2s infinite ease-out;
      }

      @keyframes ping {
        0% {
          transform: translate(-50%, -50%) scale(0.1);
          opacity: 1;
        }
        100% {
          transform: translate(-50%, -50%) scale(20);
          opacity: 0.5;
        }
      }

      /* small labels for counts */
      .meta {
        margin-top: 12px;
        color: var(--neon-2);
        font-size: 13px;
      }

      /* subtle grid overlay */
      .radar::after {
        content: "";
        position: absolute;
        inset: 0;
        border-radius: 50%;
        background-image: repeating-linear-gradient(
            0deg,
            rgba(0, 255, 102, 0.008) 0 1px,
            transparent 1px 24px
          ),
          repeating-linear-gradient(
            90deg,
            rgba(0, 255, 102, 0.008) 0 1px,
            transparent 1px 24px
          );
        mix-blend-mode: overlay;
        pointer-events: none;
      }

      /* CTA area simple (email subscribe placeholder) */
      .cta {
        margin-top: 20px;
        display: flex;
        gap: 8px;
        align-items: center;
      }

      .input {
        background: transparent;
        border: 1px solid rgba(0, 255, 102, 0.12);
        padding: 10px 12px;
        color: var(--neon);
        min-width: 220px;
        border-radius: 8px;
        outline: none;
      }

      .btn {
        background: linear-gradient(
          180deg,
          rgba(0, 255, 102, 0.14),
          rgba(0, 255, 102, 0.1)
        );
        color: var(--neon);
        border: 1px solid rgba(0, 255, 102, 0.18);
        padding: 10px 14px;
        border-radius: 8px;
        cursor: pointer;
        font-weight: 700;
        letter-spacing: 0.6px;
      }
    </style>
  </head>
  <body>
    <main class="wrap">
      <section class="hero">
        <h1 class="title">COMING SOON</h1>
        <p class="subtitle">
          GamerWait — track releases, date changes and global hype maps. Join
          the zone and never miss a drop.
        </p>
        <div class="meta">Live map · Release trackers · Real-time updates</div>
      </section>

      <aside class="radar-wrap">
        <div class="radar" role="img" aria-label="Radar showing global hype">
          <div class="sweep"></div>
          <div class="center-dot"></div>
          <div class="ping"></div>
        </div>
      </aside>
    </main>
    <Analytics />
  </body>
</html>
